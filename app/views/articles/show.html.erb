<header id="page-title" class="jumbotron background">
  <div id="title-image" class="bg">
    <img src="http://lorempixel.com/1000/570/sports/4/" alt="">
  </div>
  <div class="container">
    <div class="horizontal-center vertical-center">
      <h1 class="article-title"><%= @article.title %></h1>
      <h2 class="article-subtitle"></h2>
    </div>
  </div>
</header>

<div class="container foreground">
  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component">
        <article>
           <%= raw @article.content %>
          <div class="horizontal-center">
            <div class="author">
              <a href="#">
                <img src="" class="author-image"><span class="author-name">By : <%= @article.user.email %></span>
              </a>
            </div>
            <div class="date-published">
              <%= @article.updated_at %>
            </div>
          </div>
        </article>
        <% if user_signed_in? %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
<% else %>
  <%= link_to 'Back', "/visitors/blogs" %>
<% end %> 
      </div>
    </div>
  </div>
</div>
<%= render 'comments/form'%>